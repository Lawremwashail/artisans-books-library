<div class="mx-auto md:w-2/3 w-full">
  <% if flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert">
      <%= flash[:alert] %>
    </p>
  <% end %>

  <% if flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= flash[:notice] %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl mb-4">Login</h1>

  <%= form_with url: login_path, local: true, class: 'contents' do |f| %>
    <div class="my-5">
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full", placeholder: "Enter your email address" %>
    </div>

    <div class="my-5">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full", placeholder: "Enter your password" %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= f.submit "Login", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <p class="mt-4 text-sm text-gray-600">
    Don't have an account? 
    <%= link_to "Sign up here", signup_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
  </p>
</div>
