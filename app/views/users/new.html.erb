<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-700">Sign Up</h1>

  
  <% if @user.errors.any? %>
    <div class="mb-4 p-3 bg-red-100 text-red-600 rounded-lg">
      <ul>
        <% @user.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter your full name" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter your email" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter your password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Confirm your password" %>
    </div>

    <div>
      <%= f.submit "Sign Up", class: "w-full px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-semibold rounded-md cursor-pointer transition duration-300" %>
    </div>
  <% end %>

  <p class="mt-4 text-sm text-gray-600 text-center">
    Already have an account?
    <%= link_to "Login here", login_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
  </p>
</div>
