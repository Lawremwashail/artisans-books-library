<div class="max-w-4xl mx-auto mt-8">
  <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Profile Page</h1>

  <h2 class="text-xl font-semibold text-gray-700 mb-4">My Borrowed Books</h2>

  <% if @borrowed_books.any? %>
    <table class="table-auto w-full border-collapse border border-gray-300">
      <thead>
        <tr>
          <th class="border px-4 py-2">Title</th>
          <th class="border px-4 py-2">Author</th>
          <th class="border px-4 py-2">Due Date</th>
          <th class="border px-4 py-2">Return</th>
        </tr>
      </thead>
      <tbody>
        <% @borrowed_books.each do |book| %>
          <tr>
            <td class="border px-4 py-2"><%= book.title %></td>
            <td class="border px-4 py-2"><%= book.author %></td>
            <td class="border px-4 py-2">
              <%= (book.created_at + 14.days).strftime('%B %d, %Y') %>
            </td>
            <td class="border px-4 py-2">
              <%= button_to "Return", return_book_book_path(book), method: :patch, class: "bg-red-500 text-white px-4 py-2 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-600">You have not borrowed any books.</p>
  <% end %>
</div>
