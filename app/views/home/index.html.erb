<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-3xl text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Welcome to Online Library</h1>
    <p class="text-lg text-gray-600 mb-6">Discover, borrow, and enjoy books from our vast collection.</p>

    <div class="space-x-4">
      <% if session[:user_id] %>
        <%= link_to "Browse Books", books_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow" %>
        <%= link_to "Profile", profile_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-2 rounded shadow" %>
      <% else %>
        <%= link_to "Sign Up", signup_path, class: "bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-2 rounded shadow" %>
        <%= link_to "Login", login_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow" %>
      <% end %>
    </div>
  </div>
</div>
